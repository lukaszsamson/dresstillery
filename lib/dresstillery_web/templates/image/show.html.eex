<h2>Show Image</h2>
<%= img_tag image_src(@image), class: "image-contained" %>
<ul>

  <li>
    <strong>File name:</strong>
    <%= @image.file_name %>
  </li>

  <li>
    <strong>Path:</strong>
    <%= @image.path %>
  </li>

  <li>
    <strong>URL:</strong>
    <%= image_src(@image) %>
  </li>

</ul>

<span><%= link "Back", to: image_path(@conn, :index) %></span>
